{
    "version": "0.0.9",
    "description": "Kopi is a JDK version management tool written in Rust that integrates with your shell to seamlessly switch between different Java Development Kit versions. ",
    "homepage": "https://kopi-vm.github.io/",
    "license": "Apache-2.0",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.0.9/kopi-0.0.9-windows-x64.zip",
            "hash": "8942f1ddb8a5512fd13aca94565f250786b9662c4460c0b9449f5d5935b6ca19"
        },
        "arm64": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.0.9/kopi-0.0.9-windows-arm64.zip",
            "hash": "3a45680f18f24366a75bfed2c639f1cf0bd0cfa47e24011f1e6c5affdf9598ff"
        }
    },
    "extract_to": "bin",
    "bin": [
        [
            "bin\\kopi.exe",
            "kopi"
        ]
    ],
    "env_add_path": "shims",
    "env_set": {
        "KOPI_HOME": "$dir"
    },
    "post_install": "kopi setup",
    "checkver": {
        "github": "https://github.com/kopi-vm/kopi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
