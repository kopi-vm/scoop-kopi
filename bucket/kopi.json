{
    "version": "0.0.6",
    "description": "Kopi is a JDK version management tool written in Rust that integrates with your shell to seamlessly switch between different Java Development Kit versions. ",
    "homepage": "https://kopi-vm.github.io/",
    "license": "Apache-2.0",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.0.6/kopi-0.0.7-windows-x64.zip",
            "hash": "c02d58b88f80a1efb04d17e457e921df872c118cf1d6bfbfe8bb3730d109ff9e"
        },
        "arm64": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.0.6/kopi-0.0.7-windows-arm64.zip",
            "hash": "feac53120a0e143a116fe1f39f2e8fdc9ff010fe52cacf46533968d0d68f551e"
        }
    },
    "extract_to": "bin",
    "bin": [
        [
            "bin\\kopi.exe",
            "kopi"
        ]
    ],
    "env_add_path": "shims",
    "env_set": {
        "KOPI_HOME": "$dir"
    },
    "post_install": "kopi setup",
    "checkver": {
        "github": "https://github.com/kopi-vm/kopi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
