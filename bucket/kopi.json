{
    "version": "0.1.1",
    "description": "Kopi is a JDK version management tool written in Rust that integrates with your shell to seamlessly switch between different Java Development Kit versions. ",
    "homepage": "https://kopi-vm.github.io/",
    "license": "Apache-2.0",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.1/kopi-0.1.1-windows-x64.zip",
            "hash": "0cb36b1a8465c10e8947e3a8b794dc315d1f68787966c9a8c713eb13512b3c4b"
        },
        "arm64": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.1/kopi-0.1.1-windows-arm64.zip",
            "hash": "f006673e99561b53bb7e32ff05e76b30e3ed794fa38eb20dc178f33c2731f194"
        }
    },
    "extract_to": "bin",
    "bin": [
        [
            "bin\\kopi.exe",
            "kopi"
        ]
    ],
    "env_add_path": "shims",
    "env_set": {
        "KOPI_HOME": "$dir"
    },
    "post_install": "kopi setup",
    "checkver": {
        "github": "https://github.com/kopi-vm/kopi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
