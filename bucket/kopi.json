{
    "version": "0.1.2",
    "description": "Kopi is a JDK version management tool written in Rust that integrates with your shell to seamlessly switch between different Java Development Kit versions. ",
    "homepage": "https://kopi-vm.github.io/",
    "license": "Apache-2.0",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.2/kopi-0.1.2-windows-x64.zip",
            "hash": "be210096b04d6eeb0507e6517fe5f1abe0c17c5c23ce0181860425ebc5f411fc"
        },
        "arm64": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.2/kopi-0.1.2-windows-arm64.zip",
            "hash": "6be2bed8548215c7a1b3a8090c2faf6036755b80c1e57b8370db1a6c96b0c43a"
        }
    },
    "extract_to": "bin",
    "bin": [
        [
            "bin\\kopi.exe",
            "kopi"
        ]
    ],
    "env_add_path": "shims",
    "env_set": {
        "KOPI_HOME": "$dir"
    },
    "post_install": "kopi setup",
    "checkver": {
        "github": "https://github.com/kopi-vm/kopi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
