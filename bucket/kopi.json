{
    "version": "0.1.3",
    "description": "Kopi is a JDK version management tool written in Rust that integrates with your shell to seamlessly switch between different Java Development Kit versions. ",
    "homepage": "https://kopi-vm.github.io/",
    "license": "Apache-2.0",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.3/kopi-0.1.3-windows-x64.zip",
            "hash": "a14c6370ce1eb0e3aa24cadcc8dcb4e55a0eb16edef066c340a5fb06adc38ad1"
        },
        "arm64": {
            "url": "https://github.com/kopi-vm/kopi/releases/download/v0.1.3/kopi-0.1.3-windows-arm64.zip",
            "hash": "a64bcc1fea8c301272599406d8182e85d96f5dd840239f7052d71085aedb6f98"
        }
    },
    "extract_to": "bin",
    "bin": [
        [
            "bin\\kopi.exe",
            "kopi"
        ]
    ],
    "env_add_path": "shims",
    "env_set": {
        "KOPI_HOME": "$dir"
    },
    "post_install": "kopi setup",
    "checkver": {
        "github": "https://github.com/kopi-vm/kopi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/kopi-vm/kopi/releases/download/v$version/kopi-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
